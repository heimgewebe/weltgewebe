{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://weltgewebe.org/schemas/domain/edge.schema.json",
  "title": "Edge",
  "description": "An edge representing a relationship between two entities.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "source_type": {
      "type": "string",
      "enum": ["role", "node", "account"]
    },
    "source_id": {
      "type": "string",
      "format": "uuid"
    },
    "target_type": {
      "type": "string",
      "enum": ["role", "node", "account"]
    },
    "target_id": {
      "type": "string",
      "format": "uuid"
    },
    "edge_kind": {
      "type": "string",
      "enum": ["delegation", "membership", "ownership", "reference"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time"
    },
    "note": {
      "type": "string"
    }
  },
  "required": ["id", "source_type", "source_id", "target_type", "target_id", "edge_kind", "created_at"]
}
