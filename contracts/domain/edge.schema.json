{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Edge",
  "description": "An edge representing a relationship between two entities (nodes or roles) in the Weltgewebe graph.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "source_type": {
      "type": "string",
      "enum": ["role", "node"]
    },
    "source_id": {
      "type": "string",
      "format": "uuid"
    },
    "target_type": {
      "type": "string",
      "enum": ["role", "node"]
    },
    "target_id": {
      "type": "string",
      "format": "uuid"
    },
    "edge_kind": {
      "type": "string",
      "enum": ["delegation", "membership", "ownership"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["id", "source_type", "source_id", "target_type", "target_id", "edge_kind", "created_at"]
}
