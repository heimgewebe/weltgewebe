{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Conversation",
  "description": "A conversation space for discussion or decision-making.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "conversation_type": {
      "type": "string",
      "enum": ["node", "webrat", "naehstuebchen", "private"]
    },
    "subject_id": {
      "type": ["string", "null"],
      "format": "uuid"
    },
    "author_role_id": {
      "type": "string",
      "format": "uuid"
    },
    "title": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["id", "conversation_type", "subject_id", "author_role_id", "title", "created_at", "updated_at"]
}
