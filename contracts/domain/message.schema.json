{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Message",
  "description": "A single message within a conversation.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "conversation_id": {
      "type": "string",
      "format": "uuid"
    },
    "author_role_id": {
      "type": "string",
      "format": "uuid"
    },
    "content": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["id", "conversation_id", "author_role_id", "content", "created_at"]
}
