{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "role": {
      "type": "string",
      "enum": ["norm", "reality", "runbooks", "action"]
    },
    "organ": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9-]+$"
    },
    "status": {
      "type": "string",
      "enum": ["canonical"]
    },
    "last_reviewed": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "depends_on": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "verifies_with": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "id",
    "role",
    "status",
    "last_reviewed",
    "depends_on",
    "verifies_with"
  ],
  "additionalProperties": false
}
