{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Deployment Snapshot",
  "type": "object",
  "required": ["ts", "host", "repo", "compose", "containers", "volumes", "mounts", "health"],
  "properties": {
    "ts": { "type": "string", "format": "date-time" },
    "host": { "type": "string" },
    "repo": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "sha_short": { "type": ["string", "null"] },
        "dirty": { "type": ["boolean", "null"] }
      }
    },
    "compose": {
      "type": "object",
      "properties": {
        "file": { "type": "string" },
        "file_sha256": { "type": "string" },
        "config_sha256": { "type": ["string", "null"] },
        "render_degraded": { "type": "boolean" },
        "warnings": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "containers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "service": { "type": "string" },
          "name": { "type": "string" },
          "image": { "type": "string" },
          "digest": { "type": ["string", "null"] },
          "status": { "type": "string" },
          "health": { "type": ["string", "null"] },
          "ports": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "volumes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "logical": { "type": "string" },
          "compose_name": { "type": "string" },
          "exists": { "type": "boolean" }
        }
      }
    },
    "mounts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "container": { "type": "string" },
          "type": { "type": "string" },
          "source": { "type": "string" },
          "destination": { "type": "string" }
        }
      }
    },
    "health": {
      "type": "object",
      "properties": {
        "mode": { "type": ["string", "null"] },
        "url": { "type": ["string", "null"] },
        "ok": { "type": ["boolean", "null"] },
        "http_code": { "type": ["number", "null"] },
        "reason": { "type": ["string", "null"] }
      }
    }
  }
}
